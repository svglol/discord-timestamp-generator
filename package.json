{
  "name": "nuxt-app",
  "private": true,
  "scripts": {
    "build": "nuxt build",
    "dev": "nuxt dev",
    "generate": "nuxt generate",
    "postinstall": "nuxt prepare && bun simple-git-hooks install",
    "lint": "bun lint:js && bun lint:style",
    "lint:js": "eslint --ext .js,.ts,.mjs,.vue --fix --ignore-path .gitignore .",
    "lint:style": "stylelint **/*.{vue,css} --fix --ignore-path .gitignore",
    "preview": "nuxt preview",
    "test": "vitest --run",
    "typecheck": "nuxt typecheck",
    "playwright-install": "bunx playwright install && bunx playwright install-deps"
  },
  "simple-git-hooks": {
    "pre-commit": "bun lint-staged",
    "commit-msg": "bun commitlint --edit $1"
  },
  "lint-staged": {
    "*.{js,ts,mjs,vue}": [
      "eslint --fix"
    ],
    "*.{css,vue}": "stylelint --fix"
  },
  "devDependencies": {
    "@iconify-json/mdi": "1.1.54",
    "@nuxt/ui": "2.9.0",
    "moment": "2.29.4",
    "moment-timezone": "0.5.43",
    "nuxt": "3.7.4",
    "@commitlint/cli": "17.7.2",
    "@commitlint/config-conventional": "17.7.0",
    "@nuxt/devtools": "0.8.5",
    "@nuxt/eslint-config": "0.2.0",
    "@nuxt/test-utils": "3.7.4",
    "@playwright/test": "1.38.1",
    "@types/node": "20.8.3",
    "@typescript-eslint/eslint-plugin": "6.7.4",
    "@typescript-eslint/parser": "6.7.4",
    "@vueuse/core": "10.4.1",
    "@vueuse/nuxt": "10.4.1",
    "eslint": "8.51.0",
    "eslint-config-prettier": "9.0.0",
    "eslint-plugin-nuxt": "4.0.0",
    "eslint-plugin-prettier": "5.0.0",
    "eslint-plugin-vue": "9.17.0",
    "happy-dom": "12.2.1",
    "lint-staged": "14.0.1",
    "nuxt-vitest": "0.11.0",
    "postcss-html": "1.5.0",
    "prettier": "3.0.3",
    "simple-git-hooks": "2.9.0",
    "stylelint": "15.10.3",
    "stylelint-config-prettier": "9.0.5",
    "stylelint-config-recommended-vue": "1.5.0",
    "stylelint-config-standard": "34.0.0",
    "vitest": "0.33.0"
  },
  "packageManager": "bun@1.0.2"
}
