{
  "name": "nuxt-app",
  "private": true,
  "scripts": {
    "build": "nuxt build",
    "dev": "nuxt dev",
    "generate": "nuxt generate",
    "postinstall": "nuxt prepare && bun simple-git-hooks install",
    "lint": "bun lint:js && bun lint:style",
    "lint:js": "eslint --ext .js,.ts,.mjs,.vue --fix --ignore-path .gitignore .",
    "lint:style": "stylelint **/*.{vue,css} --fix --ignore-path .gitignore",
    "preview": "nuxt preview",
    "test": "vitest --run",
    "typecheck": "nuxt typecheck",
    "playwright-install": "bunx playwright install && bunx playwright install-deps"
  },
  "simple-git-hooks": {
    "pre-commit": "bun lint-staged",
    "commit-msg": "bun commitlint --edit $1"
  },
  "lint-staged": {
    "*.{js,ts,mjs,vue}": [
      "eslint --fix"
    ],
    "*.{css,vue}": "stylelint --fix"
  },
  "devDependencies": {
    "@iconify-json/mdi": "1.2.2",
    "@nuxt/ui": "2.9.0",
    "moment": "2.30.1",
    "moment-timezone": "0.5.46",
    "nuxt": "3.8.0",
    "@commitlint/cli": "18.6.1",
    "@commitlint/config-conventional": "18.6.3",
    "@nuxt/devtools": "1.3.9",
    "@nuxt/eslint-config": "0.7.4",
    "@nuxt/test-utils": "3.8.0",
    "@playwright/test": "1.39.0",
    "@types/node": "20.17.11",
    "@typescript-eslint/eslint-plugin": "6.21.0",
    "@typescript-eslint/parser": "6.21.0",
    "@vueuse/core": "10.11.1",
    "@vueuse/nuxt": "10.11.1",
    "eslint": "8.57.1",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-nuxt": "4.0.0",
    "eslint-plugin-prettier": "5.2.1",
    "eslint-plugin-vue": "9.32.0",
    "happy-dom": "12.2.1",
    "lint-staged": "15.3.0",
    "nuxt-vitest": "0.11.5",
    "postcss-html": "1.7.0",
    "prettier": "3.4.2",
    "simple-git-hooks": "2.11.1",
    "stylelint": "15.11.0",
    "stylelint-config-prettier": "9.0.5",
    "stylelint-config-recommended-vue": "1.5.0",
    "stylelint-config-standard": "34.0.0",
    "vitest": "0.33.0"
  },
  "packageManager": "bun@1.0.2"
}
